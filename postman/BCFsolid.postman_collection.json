{
	"info": {
		"_postman_id": "1ae8b200-f02b-4f83-9956-3faa865531a1",
		"name": "BCFsolid",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "4237461"
	},
	"item": [
		{
			"name": "SolidAuth",
			"item": [
				{
					"name": "Send Credentials",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = JSON.parse(responseBody);\r",
									"postman.setEnvironmentVariable(\"SOLID_RESPONSE_ID\", jsonData.id);\r",
									"postman.setEnvironmentVariable(\"SOLID_RESPONSE_SECRET\", jsonData.secret);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n    \"email\": \"{{USERNAME}}\",\r\n    \"password\": \"{{PASSWORD}}\",\r\n    \"name\": \"{{NAME}}\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "http://localhost:3000/idp/credentials/",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"idp",
								"credentials",
								""
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = JSON.parse(responseBody);\r",
									"postman.setEnvironmentVariable(\"SOLID_ACCESS_TOKEN\", jsonData.access_token);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "password",
									"value": "{{SOLID_RESPONSE_SECRET}}",
									"type": "string"
								},
								{
									"key": "username",
									"value": "{{SOLID_RESPONSE_ID}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "grant_type",
									"value": "client_credentials",
									"type": "text"
								},
								{
									"key": "scope",
									"value": "webid",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "http://localhost:3000/.oidc/token",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								".oidc",
								"token"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "GET Topic (solid-bcf-middleware)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/ld+json",
						"type": "text"
					}
				],
				"url": {
					"raw": "localhost:3080/template/get-request",
					"host": [
						"localhost"
					],
					"port": "3080",
					"path": [
						"template",
						"get-request"
					]
				}
			},
			"response": []
		}
	]
}